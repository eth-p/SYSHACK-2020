{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"sourceMap": true,
		"declaration": true,
		"noImplicitReturns": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true,
		"strictBindCallApply": true,
		"stripInternal": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"$bot/*": ["module/bot/src/*"],
			"$bounty/*": ["module/bounty/src/*"],
			"$database/*": ["module/database/src/*"],
			"$user/*": ["module/user/src/*"]
		}
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
